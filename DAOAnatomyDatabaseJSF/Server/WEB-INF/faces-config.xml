<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

    <application>
        <message-bundle>messages</message-bundle>
    </application>

    <converter>
        <converter-for-class>java.lang.String</converter-for-class>
        <converter-class>Utility.EmptyToNullConverter</converter-class>
    </converter>

    <managed-bean>
    	<managed-bean-name>config</managed-bean-name>
        <managed-bean-class>WebApp.Config</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <managed-bean>
    	<managed-bean-name>SynonymBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.SynonymBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>NodeBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.NodeBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>TimedNodeBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.TimedNodeBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>StageBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.StageBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>ThingBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.ThingBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>RelationshipBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.RelationshipBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>VersionBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.VersionBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>SourceBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.SourceBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>EditorBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.EditorBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>PerspectiveAmbitBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.PerspectiveAmbitBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>DerivedPartOfBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.DerivedPartOfBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>DerivedPartOfFKBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.DerivedPartOfFKBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>DerivedPartOfPerspectivesBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.DerivedPartOfPerspectivesBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>DerivedPartOfPerspectivesFKBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.DerivedPartOfPerspectivesFKBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>theilerStage</property-name>
            <value>#{param.theilerStage}</value>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>DerivedRelationshipTransitiveBackingBean</managed-bean-name>
    	<managed-bean-class>Beans.DerivedRelationshipTransitiveBackingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
</faces-config>
